@model IEnumerable<CapaModelo.tbDocumentosDsna>
@*@model IEnumerable<CapaModelo.tbDocumentosDsnaDescarga>*@

@{
    ViewBag.Title = "ListadoDocumentosDescarga";
    Layout = "~/Views/Shared/_Layout.cshtml";


}


<!DOCTYPE html>
<html>
<head>
    <title>Cabecera-Detalle</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .detalle {
            display: none; /* Ocultar detalles inicialmente */
            margin-left: 20px;
            background-color: #f9f9f9;
        }

        .cabecera-row {
            cursor: pointer;
            background-color: #f9f9f9;
            padding: 10px;
            border: 1px solid #ddd;
        }

       
        .titulo {
            cursor: pointer;
            background-color: #7f99b2;
            color:aliceblue;
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }

            .cabecera-row:hover {
                background-color: #d7dbdd;
            }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
            color: #429d9a;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="titulo">
        <h1>IFPDS</h1>
    </div>

    @foreach (var cabecera in Model)
    {
        <div class="cabecera-row" data-id="@cabecera.Gestion">
            <strong>@cabecera.NombreArchivo</strong>
            <td>
                @if (@cabecera.NombreArchivo == "EXPEDIENTES PERSONALES")
                {


                    <a id="Consultar" href="@Url.Action("ListadoDocumentosIExpedienteIndividual", "DocumentosIfpds", new {Cabecera=cabecera.NombreArchivo })">
                        <i>
                            <img src="~/Content/imganes/consultar-documento.png" style="width:15px" />

                        </i>
                    </a>

                }

            </td>
        </div>


        <!-- Tabla de detalles -->
        <div class="detalle" id="detalle-@cabecera.Gestion">
            <table class="table table-bordered table-sm">

                <tbody>
                    @foreach (var detalle in cabecera.oDetalleDocumentosDescargaDsna)
                    {
                        var extension = System.IO.Path.GetExtension(detalle.NombreArchivo).ToLower();
                    <tr>
                        <td class="cabecera-row">@detalle.NombreArchivo</td>

                        <!-- Botón Ver imagen -->
                        <td class="text-center align-middle p-1" style="width: 2%;">
                            @if (extension == ".jpg" || extension == ".jpeg" || extension == ".png" || extension == ".gif" || extension == ".bmp" || extension == ".webp")
                            {
                                <a cclass="btn btn-sm btn-outline-dark d-flex align-items-center justify-content-center gap-1 px-2 py-1 shadow-sm"
                                   target="_blank"
                                   style="border-radius: 20px; font-size: 0.75rem; font-weight: 500;"
                                   href="@Url.Action("VerImagenNivel", "DocumentosIfpds",
                               new { Nombre= detalle.NombreArchivo,cabecera=cabecera.NombreArchivo })">
                                    <i class="fa fa-eye" style="font-size: 0.75rem;"></i> VER
                                </a>
                            }
                        </td>
                        <!-- Botón Ver pdf -->
                        <td class="text-center align-middle p-1" style="width: 1%;">
                            @if (extension == ".pdf")
                            {
                            <a class="btn btn-sm btn-outline-dark d-flex align-items-center justify-content-center gap-1 px-2 py-1 shadow-sm"
                                                              target="_blank"
                               style="border-radius: 20px; font-size: 0.75rem; font-weight: 500;"
                               href="@Url.Action("VerPdfNivel", "DocumentosIfpds",
                               new { Nombre= detalle.NombreArchivo,cabecera=cabecera.NombreArchivo })">
                                <i class="fa fa-file-pdf-o" style="font-size: 0.8rem;"></i> PDF
                            </a>
                            }
                        </td>
                        <td>
                            <a id="Descarga" class="btn btn-outline-primary " href="@Url.Action("DescargaDcto", "DocumentosIfpds", new {Nombre= detalle.NombreArchivo,cabecera=cabecera.NombreArchivo})">
                                <i><img src="~/Content/imganes/adjunto.png" style="width:15px" /></i>Descargar
                            </a>
                        </td>



                    </tr>
                    }
                </tbody>
            </table>
        </div>


    }

  


    <script>
        $(document).ready(function () {
            // Al hacer clic en una fila de cabecera, mostrar/ocultar el detalle correspondiente
            $(".cabecera-row").click(function () {
                var cabeceraId = $(this).data("id");
                $("#detalle-" + cabeceraId).toggle(); // Alternar visibilidad del detalle
            });
        });
    </script>

    

</body>
</html>                      
