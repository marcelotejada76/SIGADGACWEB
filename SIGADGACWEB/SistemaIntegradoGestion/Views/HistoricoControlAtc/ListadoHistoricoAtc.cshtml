}
<style>
    .form-label {
        font-weight: 600;
        font-size: 13px;
        color: #5f6368;
        text-transform: uppercase;
        margin-bottom: 5px;
    }

    .form-control-modern {
        border-radius: 8px;
        padding: 8px 12px;
        font-size: 14px;
        border: 1px solid #ced4da;
        transition: box-shadow 0.3s ease, border-color 0.3s ease;
    }

        .form-control-modern:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
            outline: none;
        }

    .btn-modern {
        border-radius: 6px;
        font-size: 14px;
        padding: 6px 16px;
        font-weight: 600;
    }

    .table th {
        background: linear-gradient(to right, #0d6efd, #66b2ff);
        color: white;
        font-size: 13px;
        text-align: center;
    }

    .table td {
        vertical-align: middle;
        font-size: 14px;
    }

    .table-hover tbody tr:hover {
        background-color: #f2f4f7;
    }

    .card-title p {
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 0;
        color: #0d6efd;
    }

    .consulta-link {
        font-weight: 600;
        font-size: 14px;
        color: #0d6efd;
        text-decoration: none;
    }

        .consulta-link:hover {
            color: #084298;
            text-decoration: underline;
        }
    .th-ejecutivo {
        font-size: 1.1rem;
        font-weight: 600;
        text-transform: uppercase;
    }
</style>

<div class="container-fluid">
    <div class="card-header card-header-stretch mb-3">
        <div class="card-title">
            <p class="text-blue">Historico Controladores ATC</p>
        </div>
    </div>

    @using (Html.BeginForm("ListadoHistoricoAtc", "HistoricoControlAtc", FormMethod.Post, new { id = "registerForm", enctype = "multipart/form-data" }))
    {
        <div class="row align-items-end mb-4">
            <div class="col-sm-3">
                <label class="form-label">LICENCIA / APELLIDO</label>
            </div>
            <div class="col-sm-6">
