@model IEnumerable<CapaModelo.tbMatriculasAdeudadas>
@{
    ViewBag.Title = "ListadoMatriculasAdeudadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!--begin::Container-->

    <div class="card-header card-header-stretch">
        <div class="card-title d-flex align-items-center">
            <div class="row">
                <div class="col-md-12">
                    <h4>
                        <p class="text-blue">LISTADO DE MATRICULAS CON DEUDA</p>
                    </h4>
                </div>

            </div>
        </div>
    </div>
    <br />
    @using (Html.BeginForm("ListadoMatriculasAdeudadas", "MatriculasAdeudadas", FormMethod.Post, new { id = "registerForm", enctype = "multipart/form-data", }))
    {
        <div class="row mb-8">
            <div class="col-sm-3">
                <div class="fs-3 fw-bold mt-2 mb-2"><label>COMPAÑIA/MATRICULA</label></div>
            </div>
            <div class="col-sm-8 fv-row">

                <input style="text-transform:uppercase" class="form-control form-control-solid" id="NombreCompania" name="NombreCompania" />
            </div>
            <div>
           
                <button type="submit" class="btn btn-sm btn-success" data-dismiss="modal">Buscar </button>


            </div>
        </div>




        <div class="card card-default">
            <div class="card-body">
                <div class="row">
                    <table id="tbDetalle" class="table table-bordered table-hover table-sm" style="width:100%">
                        <thead>
                            <tr>
                                <th>Compañia</th>
                                <th>Ruc</th>
                                <th>Matricula</th>
                                <th>Valor Adeudado</th>
                                <th class=" control-label control-lab"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.COMPAÑIA)</td>
                                    <td>@Html.DisplayFor(modelItem => item.RUC)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MATRICULA)</td>
                                    <td>@Html.DisplayFor(modelItem => item.VALORFACTURA)</td>

                                    <td>
                                        <a id="Consultar" href="#" onclick="Consultar(@item.OIDDEUDOR)">
                                            <i>
                                                <img src="~/Content/imganes/consultar-documento.png" style="width:15px" />

                                            </i>
                                            Consulta
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="largeModal" tabindex="-1" role="dialog" aria-labelledby="largeModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header bg-gradient-primary text-white">
                <h6 class="modal-title text-white" id="modalLabel"> MATRICULAS ADEUDADAS</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>



            <div class="modal-body">
                <div class="row">
                    <div class="card-body border-top p-9">

                        <div class="container">
                            <div class="row justify-content-start">
                                <div class="col-8">
                                    <div class="fs-6 fw-bold mt-2 mb-3"><label>Compañia</label></div>
                                    <input style="font-size:14px" class="form-control form-control-sm" id="COMPAÑIA" readonly="readonly" />
                                </div>
                                <div class="col-4">
                                    <div class="fs-6 fw-bold mt-2 mb-3"><label>Ruc</label></div>
                                    <input style="font-size:14px" class="form-control form-control-sm" id="RUC" readonly="readonly" />
                                </div>
                            </div>
                            <div class="row justify-content-start">
                                <div class="col-4">
                                    <div class="fs-6 fw-bold mt-2 mb-3"><label>Matricula</label></div>
                                    <input style="font-size:14px" class="form-control form-control-sm" id="MATRICULA" readonly="readonly" />
                                </div>
                                <div class="col-4">
                                    <div class="fs-6 fw-bold mt-2 mb-3"><label>Numero Factura</label></div>
                                    <input style="font-size:14px" class="form-control form-control-sm" id="NUMEROFACTURA" readonly="readonly" />
                                </div>

                            </div>

                            <div class="row justify-content-start">
                                <div class="col-4">
                                    <div class="fs-6 fw-bold mt-2 mb-3"><label>Fecha Factura</label></div>
                                    <input style="font-size:14px" class="form-control form-control-sm" id="FECHAFACTURA" readonly="readonly" />
                                </div>
                                <div class="col-4">
                                    <div class="fs-6 fw-bold mt-2 mb-3"><label>Fecha Recepción</label></div>
                                    <input style="font-size:14px" class="form-control form-control-sm" id="FECHARECEPCION" readonly="readonly" />
                                </div>
                                <div class="col-4">
                                    <div class="fs-6 fw-bold mt-2 mb-3"><label>Fecha Vencimiento</label></div>
                                    <input style="font-size:14px" class="form-control form-control-sm" id="FECHAVENCIMIENTO" readonly="readonly" />
                                </div>


                            </div>

                            <div class="row justify-content-start">
                                <div class="col-4">
                                    <div class="fs-6 fw-bold mt-2 mb-3"><label>Valor Factura</label></div>
                                    <input style="font-size:14px" class="form-control form-control-sm" id="VALORFACTURA" readonly="readonly" />
                                </div>
                                <div class="col-4">
                                    <div class="fs-6 fw-bold mt-2 mb-3"><label>Valor Adeudado</label></div>
                                    <input style="font-size:14px" class="form-control form-control-sm" id="VALORADEUDA" readonly="readonly" />
                                </div>


                            </div>
                        </div>
                        <hr />

                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>

</div>

@section scripts{
    <script>
        $(document).ready(function () {

        });

        function modalAdjunto() {
            $('#FormModal').modal('show');
        }

      

        function Consultar(Oid) {
            var xr = Oid;
            
            $("#COMPAÑIA").val("");
            $("#RUC").val("");
            $("#MATRICULA").val("");
            $("#NUMEROFACTURA").val("");
            $("#VALORFACTURA").val("");
            $("#VALORADEUDA").val("");
            $("#FECHAFACTURA").val("");
            $("#FECHARECEPCION").val("");
            $("#FECHAVENCIMIENTO").val("");
            $.ajax({
                url: $.MisUrls.url._DetalleMatriculaDeudor,
                type: "GET",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                data: { OidMatricula: Oid },
                success: function (e) {

                    $("#COMPAÑIA").val(e.COMPAÑIA);
                    $("#RUC").val(e.RUC);
                    $("#MATRICULA").val(e.MATRICULA);
                    $("#NUMEROFACTURA").val(e.NUMEROFACTURA);
                    $("#VALORFACTURA").val(e.VALORFACTURA);
                    $("#VALORADEUDA").val(e.VALORSALDO);
                    $("#FECHAFACTURA").val(e.FECHAFACTURA);
                    $("#FECHARECEPCION").val(e.FECHARECEPCION);
                    $("#FECHAVENCIMIENTO").val(e.FECHAVENCIMIENTO);


                },
                error: function (errormessage) {
                    Swal.fire("Mensaje", "Financiero: " + errormessage, "warning");
                }
            });


            $('#largeModal').modal('show');
        }


    </script>
}
