            </div>

            <div class="col-4">
                <div style="font-size:12px" class="fs-6 fw-bold mt-2 mb-3"><label> </label></div>



                @*<input type="text" style="font-size:12px;text-transform:uppercase" class="form-control form-control-solid" id="Ato" name="Ato" />*@
            </div>

        </div>

        <div class="row justify-content-center">

            <div>

                <button type="button" class="btn btn-sm btn-success" onclick="Consultar()" data-dismiss="modal">Proceder Sorteo </button>


