                        <div class="card-body border-top p-9">

                            <div class="container">

                                <div class="row justify-content-center">
                                    <div class="col-4">

                                        <div style="font-size:18px; color: blue" class="fs-6 fw-bold mt-2 mb-3"><label>DATOS DEL GANADOR</label></div>

                                    </div>

                                </div>
                                <div class="row justify-content-center">
                                    <div class="col-4">
                                        
                                        <input style="font-size:14px;color:brown;background-color:bisque" class="form-control form-control-sm" id="Descripcion" readonly="readonly" />
                                    </div>


                                </div>

                                <div class="row justify-content-center">
                                    <div class="col-4">
                                        <div style="font-size:12px" class="fs-6 fw-bold mt-2 mb-3"><label>CEDULA</label></div>
                                        <input style="font-size:12px" class="form-control form-control-sm" id="Cedula" readonly="readonly" />
                                    </div>


                                </div>

                                <div class="row justify-content-center">

                                    <div class="col-4">
                                        <div style="font-size:12px" class="fs-6 fw-bold mt-2 mb-3"><label>NOMBRE</label></div>
                                        <input style="font-size:12px" class="form-control form-control-sm" id="Nombre" readonly="readonly" />
                                    </div>

                                </div>
                                <div class="row justify-content-center">

                                    <div class="col-4">
                                        <div style="font-size:12px" class="fs-6 fw-bold mt-2 mb-3"><label>CORREO</label></div>
                                        <input style="font-size:12px" class="form-control form-control-sm" id="Correo" readonly="readonly" />
                                    </div>

                                </div>
                                <div class="row justify-content-center">

                                    <div class="col-4">
                                        <div style="font-size:12px" class="fs-6 fw-bold mt-2 mb-3"><label>CELULAR</label></div>
                                        <input style="font-size:12px" class="form-control form-control-sm" id="Celular" readonly="readonly" />
                                    </div>

                                </div>

                                <hr />
                                @*<div style="font-size:10px;color:orangered " class="fs-6 fw-bold mt-2 mb-3"><label>NOTA: El Valor de Iluminacion de Pista aplica por Aeropuerto y Horario de puesta del Sol</label></div>*@
                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>

                    </div>
                </div>
            </div>
        </div>

    </div>
</body>

</html>
@section scripts{
    <script>
        $(document).ready(function () {

        });

        function modalAdjunto() {
            $('#FormModal').modal('show');
        }



        function Consultar() {
           
            var _Cedula = $('#Cedula').val();
            var _Nombre = $('#Nombre').val();
            var _Correo = $('#Correo').val();
            var _Celular = $('#Celular').val();
            var _Tipo = $('#Tipo').val();
            var _Descripcion = $('#Descripcion').val();

            $("#Cedula").val("");
            $("#Nombre").val("");
            $("#Correo").val("");
            $("#Celular").val("");
            $("#Descripcion").val("");
            

            $.ajax({
                url: $.MisUrls.url._Sorteo,
                type: "GET",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                data: { Cedula: _Cedula, Nombre: _Nombre, Correo: _Correo, Celular: _Celular, Tipo: _Tipo, Descripcion: _Descripcion },
                success: function (e) {

                    $("#Cedula").val(e.CEDULARUC);
                    $("#Nombre").val(e.NOMBRE);
                    $("#Correo").val(e.CORREO);
                    $("#Celular").val(e.CELULAR);
                    $("#Descripcion").val(e.DESCRIPCION);

                },
                error: function (errormessage) {
                    Swal.fire("Mensaje", "Financiero: " + errormessage, "warning");
                }
            });


            $('#largeModal').modal('show');
        }


    </script>
}