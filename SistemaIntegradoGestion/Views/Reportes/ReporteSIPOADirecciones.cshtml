@using ReportViewerForMvc
@{
    ViewBag.Title = "reporte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.NombreViewer != null)
{
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3>@ViewBag.NombreViewer</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Fecha: @DateTime.Now.ToLongDateString()</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
}

<div class="col-sm-12">
    <div style="width: 100%; height: 100%; overflow: auto; font-size:16px">
        @if (ViewBag.ReportViewer != null)
        {
            @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, new { @width = "100%" });
        }
    </div>

</div>


