@model IEnumerable<CapaModelo.tbSolicitudPOA>

@{
    ViewBag.Title = "Aprobar Solicitud Certificación POA";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Detalle Solicitar Certificado POA</h2>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Inicio </a></li>
                    <li class="breadcrumb-item active">Solicitar Certificado POA</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<div class="container-fluid">
    <div class="card card-default">
        <div class="card-body">
            <div class="card-header bg-gradient-lightblue">
                <strong>@Session["DireccionSubSistema"].ToString()</strong>
            </div>
            <br />
            <div class="row">
                <table id="tbDetalle" class="table table-bordered table-hover table-sm" style="width:100%">
                    <thead>
                        <tr>
                            <th>Año</th>                            
                            <th>Unidad Ejecución</th>
                            <th>Dirección</th>
                            <th>Número Solicitud</th>
                            <th>Tipo Solicitud</th>
                            <th>Estado Solicitud</th>
                            <th>Fecha Solicitud</th>
                            <th>Fecha Revision</th>
                            <th>Estado Autorizado</th>
                            <th>Fecha Aprobacion</th>
                            <th>Actividad</th>
                            <th>Certificado_Actual</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.AnioSolicitud)</td>
                            <td>@Html.DisplayFor(modelItem => item.CodigoUnidadEjecucion)</td>
                            <td>@Html.DisplayFor(modelItem => item.CodigoDireccionPYGE)</td>
                            <td>@Html.DisplayFor(modelItem => item.NumeroSolicitud)</td>
                            <td>@Html.DisplayFor(modelItem => item.TipoSolicitud)</td>
                            <td>@Html.DisplayFor(modelItem => item.EstadoSolicitud)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaSolicitud)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaRevision)</td>
                            <td>@Html.DisplayFor(modelItem => item.EstadoAutorizacion)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaAprobacion)</td>
                            <td>@Html.DisplayFor(modelItem => item.SecuenciaActividad)</td>
                            <td>@Html.DisplayFor(modelItem => item.NumeroCertificadoPOA)</td>
                            <td>
                                <a id="imprimir" href="@Url.Action("DocumentoHabilitante", "SolicitarModificaciones", new {cdireccion= item.CodigoDireccionPYGE, canio =item.AnioSolicitud, tipoSolicitud = item.TipoSolicitud, numSolicitud = item.NumeroSolicitud.ToString(), estadoAutorizado = item.EstadoAutorizacion.ToString() })">
                                    <i>
                                        <img src="~/Content/imganes/adjunto.png" style="width:15px" />
                                    </i>
                                    Adjuntar
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

