
@{
    ViewBag.Title = "Formulario";
}

<div class="card">
    <div class="card-body">
        <div class="form-horizontal">
            <div class="col-sm-12">
                <table class="table table-bordered table-hover table-sm" id="tbFormulario" style="width:100%; font-size:small">
                    <thead>
                        <tr>
                            <th class="text-center" colspan="5">
                                DETALLE DE VUELOS
                            </th>
                            <th class="text-center" colspan="2">
                                OR
                            </th>
                            <th class="text-center" colspan="2">
                                WT
                            </th>
                            <th class="text-center" colspan="2">
                                D6
                            </th>
                            <th class="text-center" rowspan="2">
                                Total General
                            </th>
                            <th rowspan="2"></th>
                        </tr>
                        <tr>                            
                            <th scope="col">Fecha</th>
                            <th scope="col">Matricula</th>
                            <th scope="col">No. Vuelo</th>
                            <th scope="col">Ruta</th>
                            <th scope="col">Total Pax</th>                            
                            <th scope="col">Valor Or</th>
                            <th scope="col">Total Or</th>
                            <th scope="col">Valor Wt</th>
                            <th scope="col">Total Wt</th>
                            <th scope="col">Valor DG</th>
                            <th scope="col">Total DG</th>                            
                            
                        </tr>
                    </thead>
                    <tfoot style="display: table-header-group;">
                        <tr>
                            <th><input type="text" class="form-control form-control-sm text-uppercase" autocomplete="off" maxlength="30" style="font-size:14px;" id="txtMarca" /></th>
                            <th><input type="text" class="form-control form-control-sm text-uppercase" autocomplete="off" maxlength="30" style="font-size:14px;" id="txtModelo" /></th>
                            <th><input type="text" class="form-control form-control-sm text-uppercase" autocomplete="off" maxlength="30" style="font-size:14px;" id="txtModelo" /></th>                            
                            <th><input type="text" class="form-control form-control-sm text-uppercase" autocomplete="off" maxlength="30" style="font-size:14px;" id="txtModelo" /></th>
                            <th><input type="text" class="form-control form-control-sm text-uppercase" autocomplete="off" maxlength="30" style="font-size:14px;" id="txtModelo" /></th>
                            <th><input type="text" class="form-control form-control-sm text-uppercase" autocomplete="off" maxlength="30" style="font-size:14px;" id="txtModelo" /></th>
                            <th><input type="text" class="form-control form-control-sm text-uppercase" autocomplete="off" maxlength="30" style="font-size:14px;" id="txtModelo" /></th>
                            <th><input type="text" class="form-control form-control-sm text-uppercase" autocomplete="off" maxlength="30" style="font-size:14px;" id="txtModelo" /></th>
                            <th><input type="text" class="form-control form-control-sm text-uppercase" autocomplete="off" maxlength="30" style="font-size:14px;" id="txtModelo" /></th>
                            <th><input type="text" class="form-control form-control-sm text-uppercase" autocomplete="off" maxlength="30" style="font-size:14px;" id="txtModelo" /></th>
                            <th><input type="text" class="form-control form-control-sm text-uppercase" autocomplete="off" maxlength="30" style="font-size:14px;" id="txtModelo" /></th>
                            <th><input type="text" class="form-control form-control-sm text-uppercase" autocomplete="off" maxlength="30" style="font-size:14px;" id="txtModelo" /></th>

                            <th>
                                <button type="button" id="btnAddAeronaveMatricula" class="btn btn-outline-primary btn-sm" onclick='agregarAeronaveMatricula()'>Agregar</button>
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

