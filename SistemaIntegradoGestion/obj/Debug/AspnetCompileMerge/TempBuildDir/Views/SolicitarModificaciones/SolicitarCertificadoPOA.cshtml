@model IEnumerable<CapaModelo.tbSolicitudPOA>
@{
    ViewBag.Title = "Solicitar Certificado POA";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Solicitar Certificado POA</h2>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Inicio </a></li>
                    <li class="breadcrumb-item active">Solicitar Certificado POA</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<div class="container-fluid">
    <div class="card card-default">
        <div class="card-body">
            <div class="card-header bg-gradient-lightblue">
                <strong>@Session["DireccionSubSistema"].ToString()</strong>
            </div>
            <br />
            <div class="row">
                <div class="col-12">
                    <table id="tbDetalle" class="table table-bordered table-hover table-sm display" style="width:100%">
                        <thead>
                            <tr class="text-center">
                                <th>Año</th>
                                <th>Número<br /> Solicitud</th>
                                <th>Tipo<br /> Solicitud</th>
                                <th>Fecha<br /> Solicitud</th>
                                <th>Estado<br /> Solicitud</th>
                                <th>Fecha<br /> Revisión</th>
                                <th>Estado<br /> Autorizado</th>
                                <th>Fecha<br /> Aprobación</th>
                                <th>Núm.<br /> Act.POA</th>
                                <th>Núm.<br />Certificado</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.AnioSolicitud)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NumeroSolicitud)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FechaSolicitud)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TipoSolicitud)</td>
                                    <td>@Html.DisplayFor(modelItem => item.EstadoSolicitud)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FechaRevision)</td>
                                    <td>@Html.DisplayFor(modelItem => item.EstadoAutorizacion)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FechaAprobacion)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SecuenciaActividad)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NumeroCertificadoPOA)</td>
                                    <td class="text-center">
                                        @if (item.EstadoSolicitud == "NS")
                                        {
                                            <a id="documentosAdjuntos" class="btn btn-group-sm  btn-outline-warning" href="@Url.Action("DocumentoHabilitante", "SolicitarModificaciones", new {cdireccion= item.CodigoDireccionPYGE, canio =item.AnioSolicitud, tipoSolicitud = item.TipoSolicitud, numSolicitud = item.NumeroSolicitud.ToString(), estadoAutorizado = item.EstadoAutorizacion.ToString(), vista="SolicitarCertificadoPOA" })">
                                                <i><img src="~/Content/imganes/adjunto.png" style="width:15px" /></i>Adjuntar
                                            </a>
                                        }
                                        else
                                        {
                                            <a id="documentosAdjuntos" class="btn btn-group-sm  btn-outline-primary" href="@Url.Action("DocumentoHabilitante", "SolicitarModificaciones", new {cdireccion= item.CodigoDireccionPYGE, canio =item.AnioSolicitud, tipoSolicitud = item.TipoSolicitud, numSolicitud = item.NumeroSolicitud.ToString(), estadoAutorizado = item.EstadoAutorizacion.ToString(), vista="SolicitarCertificadoPOA" })">
                                                <i><img src="~/Content/imganes/adjunto.png" style="width:15px" /></i>Descargar
                                            </a>
                                        }
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>                 
                </div>
            </div>
    </div>
</div>

