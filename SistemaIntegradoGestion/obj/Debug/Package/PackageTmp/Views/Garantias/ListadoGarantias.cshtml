@model IEnumerable<CapaModelo.tbGarantias>
@{
    ViewBag.Title = "ListadoGarantias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!--begin::Container-->
   

    <div class="card card-default">
        <div class="card-body">
            <div class="row">
                <table id="tbDetalle" class="table table-bordered table-hover table-sm" style="width:100%">
                    <thead>
                        <tr>
                            <th>Ruc</th>
                            <th>Número Garantia</th>
                            <th>Compañia Contratista</th>
                            <th>Dias a Caducar</th>

                            <th class=" control-label control-lab"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Ruc)</td>
                                <td>@Html.DisplayFor(modelItem => item.NumeroGarantia)</td>
                                <td>@Html.DisplayFor(modelItem => item.Compania_Contratista)</td>
                                <td>
                                    @if (int.Parse(item.Dias_a_Caducar) <= 20)
                                    {

                                        <p class="text-danger" , style="font-size:22px;background-color: #bbb8a6">   @Html.DisplayFor(modelItem => item.Dias_a_Caducar)</p>

                                    }
                                    else
                                    {

                                        @Html.DisplayFor(modelItem => item.Dias_a_Caducar)
                                    }
                                </td>

                                <td>
                                    <a id="Consultar" href="@Url.Action("DetalleGarantia", "Garantias", new {Ruc=item.Ruc })">
                                        <i>
                                            <img src="~/Content/imganes/consultar-documento.png" style="width:15px" />

                                        </i>
                                        Consulta
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

