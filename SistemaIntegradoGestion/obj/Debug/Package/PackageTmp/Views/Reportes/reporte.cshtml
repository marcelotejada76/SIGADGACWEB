@using ReportViewerForMvc
@{
    ViewBag.Title = "reporte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.NombreViewer != null)
{
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3>@ViewBag.NombreViewer</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Fecha: @DateTime.Now.ToLongDateString()</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
}
    <div aria-live="polite" class="row">
        <div aria-live="polite" class="col-xs-12" style="width:100%; height:100%">
            @if (ViewData["reportURL"] != "" && ViewData["reportURL"] != null)
            {
                <iframe id="reportID" src=@ViewData["reportURL"] style="height: 1057px; width: 100%;" scrolling="yes"></iframe>
            }
        </div>
    </div>

